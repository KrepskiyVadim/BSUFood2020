{% extends parent_template %}

{% block title %}BSUfood{% endblock %}

{% block content %}

    <script>
        $(document).ready(function () {
            $('#dishtable').DataTable();
        });
    </script>

    <main>
        <div class="container-fluid"
             style="margin:100px auto; padding: 20px; background-color: white;">
            {% if dishes %}
                {% if categories %}
                    {% for category in categories %}
                        <h1>{{ category.name }}</h1>
                        {% for dish in dishes %}
                            {% if dish.category.id == category.id %}
                                <div>
                                    <td>{{ dish.name }}</td>
                                    <td>{{ dish.weight }}</td>
                                    <td>{{ dish.price }}</td>
                                    <td><img src="{{ dish.image }}"></td>
                                    {% for dishComposition in dishCompositions %}
                                        {% if dish.id == dishComposition.dish.id %}
                                            <td>{{ dishComposition.ingredient.name }}</td>
                                        {% endif %}
                                    {% endfor %}
                                    <button><a href="">Add</a></button>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
            {% endif %}
            <div class="navigation">
                {{ knp_pagination_render(dishes) }}
            </div>

        </div>
    </main>

{% endblock %}

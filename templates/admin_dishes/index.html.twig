{% extends 'homeBase.html.twig' %}

{% block title %}BSUfood{% endblock %}

{% block content %}

    <script>
        $(document).ready(function () {
            $('#dishtable').DataTable();
        });
    </script>

    <main>
        <div class="container-fluid"
             style="margin:100px auto; padding: 20px; background-color: white;">
            <table class="table" id="dishtable">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">DishName</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Weight</th>
                </tr>
                </thead>
                <tbody>
                {% if dishes %}
                    {% for dish in dishes %}
                        <tr>
                            <td scope="col">{{ dish.id }}</td>
                            <td>{{ dish.name }}</td>
                            <td>{{ dish.category }}</td>
                            <td>{{ dish.price }}</td>
                            <td>{{ dish.weight }}</td>
                            <td><a href ="{{ absolute_url(asset('')) }}admin/dishes/delete_dish/{{ dish.id }}"
                                   class="btn btn-danger btn-sm"><button>Delete</button></a></td>
                        </tr>
                    {% endfor %}
                {% endif %}
                <button><a href = "{{ path('create_dish') }}">Add Dish</a></button>
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(dishes) }}
            </div>

        </div>
    </main>

{% endblock %}


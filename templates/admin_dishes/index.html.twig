{% extends 'homeBase.html.twig' %}

{% block title %}BSUfood{% endblock %}

{% block content %}

    <script>
        $(document).ready(function () {
            $('#dishtable').DataTable();
        });
    </script>

    <main>
        <div class="container-fluid"
             style="margin:100px auto; padding: 20px; background-color: white;">
            <table class="table" id="dishtable">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">
                        <input type="checkbox" id="select_all">
                    </th>
                    <th scope="col">DishName</th>
                    <th scope="col">Category</th>
                </tr>
                </thead>
                <tbody>
                {% if dishes %}
                    {% for dish in dishes %}
                        <tr>
                            <td scope="col">{{ dish.id }}</td>
                            <td>
                                <input type='checkbox' name='cheks[]' value="<?php echo $item->email;?>">
                            </td>
                            <td>{{ dish.name }}</td>
                            <td>{{ dish.category }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(dishes) }}
            </div>

        </div>
    </main>

{% endblock %}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}BSUfood{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/public/assets/main/css/style.css') }}">
        <link rel="stylesheet"
              href="{{ asset('/public/assets/framework/fontawesome-free-5.15.1-web/css/fontawesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/public/assets/framework/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/public/assets/main/css/style.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-CuOF+2SnTUfTwSZjCXf01h7uYhfOBuxIhGKPbfEJ3+FqH/s6cIFN9bGr1HmAg4fQ"
              crossorigin="anonymous">
        <link rel="shortcut icon" href="{{ asset('/public/assets/images/favicon.jpg') }}" type="image/x-icon">
    {% endblock %}
</head>
<body>


<header class="fixed-top">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0A3470;">
        <div class="container-fluid">

            <span class="navbar-brand mb-0 h1"><img src="{{ asset('/public/assets/images/favicon.jpg') }}" alt="icon"
                                                    width="30"
                                                    height="30">BSUfood</span>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="{{ path('mainpage') }}">Супы</a>
                    <a class="nav-link" href="{{ path('mainpage') }}">Салаты</a>
                    <a class="nav-link" href="{{ path('mainpage') }}">Горячие блюда</a>
                    <a class="nav-link" href="{{ path('mainpage') }}">Блюда из рыбы</a>
                    <a class="nav-link" href="{{ path('mainpage') }}">Десерты</a>
                    <a class="nav-link" href="{{ path('mainpage') }}">Напитки</a>
                </div>
            </div>
        </div>
    </nav>
</header>


<div id="content">{% block content %}{% endblock %}</div>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="{{ asset('/public/assets/framework/bootstrap/js/bootstrap.min.js') }}"></script>
{% endblock %}


<footer class="fixed-bottom">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0A3470;">
        <div class="container-fluid" align="center">

            <div style="width:800px; margin:0 auto;">
                <span class="navbar-brand mb-0 h1">8 017 209-50-44</span>
            </div>
        </div>
    </nav>

</footer>


</body>
</html>

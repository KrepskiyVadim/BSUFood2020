{% extends 'adminBase.html.twig' %}

{% block title %}BSUfood{% endblock %}

{% block content %}
    <main>
        <div class="container-fluid"
             style="width:350px; margin:100px auto; padding: 20px; background-color: white; border: 1px solid black; border-radius: 15px;">
            {{ form_start(form) }}
            <div style="margin-bottom: 10px;" class="span12 text-center">
                <span class="h5">Создать блюдо</span>
            </div>
            <div class="form-group">
                {{ form_label(form.dish,null,{ 'label':'Блюдо'}) }}
                {{ form_widget(form.dish,{'attr': {'class': 'form-control custom-select', 'style':'background-color: #E5E5E5;'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.ingredient,null,{ 'label':'Ингредиент'}) }}
                {{ form_widget(form.ingredient,{'attr': {'class': 'form-control custom-select', 'style':'background-color: #E5E5E5;'}}) }}
            </div>
            <div class="text-center" style="margin-top: 10px;">
                <button type="submit" class="btn btn-primary" style="background-color: #0A3470;">Подтвердить
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}

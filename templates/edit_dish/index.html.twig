{% extends 'adminBase.html.twig' %}

{% block title %}BSUfood{% endblock %}

{% block content %}

<main>
    <div class="container-fluid"
         style="width:350px; margin:100px auto; padding: 20px; background-color: white; border: 1px solid black; border-radius: 15px;">

        {{ form_start(form) }}
        <div style="margin-bottom: 10px;" class="span12 text-center">
            <span class="h5">Редактировать блюдо</span>
        </div>
        <div class="form-group">
            {{ form_label(form.name,null,{ 'label':'Название'}) }}
            {{ form_widget(form.name,{'attr': {'class': 'form-control', 'style':'background-color: #E5E5E5;'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.category,null,{ 'label':'Категория'}) }}
            {{ form_widget(form.category,{'attr': {'class': 'form-control custom-select', 'style':'background-color: #E5E5E5;'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.price,null,{ 'label':'Цена'}) }}
            {{ form_widget(form.price,{'attr': {'class': 'form-control', 'style':'background-color: #E5E5E5;'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.weight,null,{ 'label':'Масса'}) }}
            {{ form_widget(form.weight,{'attr': {'class': 'form-control', 'style':'background-color: #E5E5E5;'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image,null,{ 'label':'Изображение'}) }}
            {{ form_widget(form.image,{'attr': {'class': 'form-control', 'style':'background-color: #E5E5E5;'}}) }}
        </div>
        <div class="text-center" style="margin-top: 10px;">
            <button type="submit" class="btn btn-primary" style="background-color: #0A3470;">Подтвердить
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</main>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}BSUfood{% endblock %}



{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}




    <main>
        <div class="container-fluid"
             style="width:500px; margin:100px auto; padding: 20px; background-color: white; border: 1px solid black; border-radius: 15px;">

            {{ form_start(registrationForm) }}
            <div style="margin: 10px;">
                <a class="link-dark" href="/login" style="margin: 75px;"><span class="h6">Вход</span></a>
                <a class="link-dark" href="#" style="margin: 20px;"><span class="h5">Регистрация</span></a>
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.username,null,{ 'label':'Логин'}) }}
                {{ form_widget(registrationForm.username,{'attr': {'class': 'form-control', 'style':'background-color: #E5E5E5;'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email,null, {
                    'label': 'Email'
                }) }}
                {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control','style':'background-color: #E5E5E5;'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword,null, {
                    'label': 'Пароль'
                }) }}
                {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control','style':'background-color: #E5E5E5;'}}) }}
            </div>
            <div class="text-center" style="margin-top: 10px;">
                <button type="submit" class="btn btn-primary" style="background-color: #0A3470;">Зарегистрироваться
                </button>
            </div>
            {{ form_end(registrationForm) }}

        </div>
    </main>

{% endblock %}





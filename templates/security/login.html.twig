{% extends 'base.html.twig' %}

{% block title %}BSUfood{% endblock %}

{% block content %}



    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}

    <main>
        <div class="container-fluid"
             style="width:350px; margin:100px auto; padding: 20px; background-color: white; border: 1px solid black; border-radius: 15px;">
            <form style="margin: 0 20px" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div style="margin: 10px;">
                    <a class="link-dark" href="#" style="margin: 25px;"><span class="h5">Вход</span></a>
                    <a class="link-dark" href="/register" style="margin: 20px;"><span class="h6">Регистрация</span></a>
                </div>
                <div class="mb-3">
                    <label for="inputUsername" class="form-label">Логин</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                           class="form-control" required autofocus
                           style="background-color: #E5E5E5;">
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Пароль</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required
                           style="background-color: #E5E5E5;">
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="background-color: #0A3470;">Войти</button>
                </div>
                <div id="emailHelp" class="form-text text-center"><a class="link-dark" href="#">Не получается войти?</a>
                </div>
            </form>
        </div>
    </main>




{% endblock %}
